{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["."],
  "exclude": ["node_modules", "build", "jest", "__mocks__"]
}
